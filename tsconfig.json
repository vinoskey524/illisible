{
  "compilerOptions": {
    "target": "ES2022",
   "module": "ESNext",
   "declaration": true,
   "declarationDir": "./dist",
   "outDir": "./dist",
   "rootDir": "./src",
   "moduleResolution": "Node",
   "esModuleInterop": true,
   "skipLibCheck": true,
   "strict": true,
   "allowImportingTsExtensions": true,
   "removeComments": true,
   "sourceMap": false
  },
  "include": ["src/**/*", "type/**/*"],
  "exclude": ["dist", "node_modules"]
}